<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!--上次排尿时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View

            android:layout_width="1.5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/rl_title_last"
            android:layout_alignBottom="@+id/rl_title_last"
            android:background="@color/gray" />
        <RelativeLayout
            android:id="@+id/rl_title_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/message_sys_bgfirst"
                android:padding="10dp"
                android:layout_toLeftOf="@id/dot_image_last"
                android:text="上次排尿时间"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/dot_image_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/record_dot" />

            <TextView
                android:id="@+id/date_time_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/message_sys_bgfirst"
                android:padding="10dp"
                android:layout_toRightOf="@id/dot_image_last"
                android:text="2015.1.02"
                android:textAlignment="center"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>