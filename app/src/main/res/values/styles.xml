<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!--去掉标题栏-->
        <item name="windowNoTitle">true</item>
        <!--设置界面使用material主题-->
        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--dialog activity-->
    <style name="ActivityDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item> <!--必须设置该属性为空，才能占满屏幕，否则会有边界空白-->
        <item name="android:textColor">@color/gray</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- title bar -->
    <style name = "MyTitleBar">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/darkBlue</item>
        <item name = "android:background">@color/lightBlue</item>
        <item name = "android:paddingTop">5dp</item>
        <item name = "android:paddingBottom">10dp</item>
        <item name = "android:textSize">24sp</item>
    </style>

</resources>
